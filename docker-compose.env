services:
  application:
    build:
      context: .
    ports:
      - 8000:8000

    depends_on:
      - redis

    volumes:
      - ./p2p_project:/p2p_project
    environment:
      - SERVER_IP=...
      - SSH_PORT=...
      - SSH_PKEY=...
      - USERNAME=...
      - SSH_PK_PASSWORD=...
      - SSH_PASSWORD=...
      - DATABASE_USERNAME=...
      - DATABASE_PASSWORD=...
      - REMOTE_BIND_ADDRESS=...
      - DATABASE_NAME=...
      - RECAPTCHA_PUBLIC_KEY=...
      - RECAPTCHA_PRIVATE_KEY=-...
      - PROD=True
      - SECRET_KEY=...
      - DJANGO_DEBUG=False

    command: >
      sh -c "python manage.py migrate && python manage.py runserver 0.0.0.0:8000"

  redis:
    image: redis:7.2.2-alpine
    hostname: redis